{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2017", "dom"],
    "jsx": "react",
    "baseUrl": "./src",
    "noEmit": true,
    "skipLibCheck": true,
    "pretty": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "plugins": [{ "name": "tslint-language-service" }],
    "paths": {
      "styled": ["./display/styled-components"]
    }
  },
  "include": [
    "./src/**/*",
    "./.storybook/**/*",
    "./type-definitions/**/*",
    "./webpack.config.ts"
  ]
}
